<config>
    <modules>
        <SOFTSS_SoftDistribution>
            <version>0.1.0</version>
        </SOFTSS_SoftDistribution>
    </modules>
    <frontend>
        <routers>
            <softdistribution>
                <use>standard</use>
                <args>
                    <module>SOFTSS_SoftDistribution</module>
                    <frontName>softdistribution</frontName>
                </args>
            </softdistribution>
        </routers>
        <layout>
            <updates>
                <softdistribution>
                    <file>softdistribution.xml</file>
                </softdistribution>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<softdistribution>
				<use>admin</use>
				<args>
					<module>SOFTSS_SoftDistribution</module>
					<frontName>softdistribution</frontName>
				</args>
			</softdistribution>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<softdistribution module="softdistribution">
				<title>SoftDistribution</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="softdistribution">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>softdistribution/adminhtml_softdistribution</action>
					</items>
				</children>
			</softdistribution>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<SOFTSS_SoftDistribution>
							<title>SoftDistribution Module</title>
							<sort_order>10</sort_order>
						</SOFTSS_SoftDistribution>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<softdistribution>
					<file>softdistribution.xml</file>
				</softdistribution>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <softdistribution>
                <class>SOFTSS_SoftDistribution_Model</class>
                <resourceModel>softdistribution_mysql4</resourceModel>
            </softdistribution>
            <softdistribution_mysql4>
                <class>SOFTSS_SoftDistribution_Model_Mysql4</class>
                <entities>
                    <softdistribution>
                        <table>softdistribution</table>
                    </softdistribution>
                </entities>
            </softdistribution_mysql4>
        </models>
        <resources>
            <softdistribution_setup>
                <setup>
                    <module>SOFTSS_SoftDistribution</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </softdistribution_setup>
            <softdistribution_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </softdistribution_write>
            <softdistribution_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </softdistribution_read>
        </resources>
        <blocks>
            <softdistribution>
                <class>SOFTSS_SoftDistribution_Block</class>
            </softdistribution>
        </blocks>
        <helpers>
            <softdistribution>
                <class>SOFTSS_SoftDistribution_Helper</class>
            </softdistribution>
        </helpers>
    </global>
</config>